{erl_opts, [debug_info]}.

{deps, [
    {cowboy, "2.12.0"},
    {jsx, "3.1.0"}
]}.

{relx, [
    {release, {happyshopr, "1.0.0"}, [
        happyshopr,
        sasl
    ]},
    {mode, dev},
    {include_erts, true},
    {extended_start_script, true},
    {sys_config, "./config/sys.config"},
    {vm_args, "./config/vm.args"}
]}.

{profiles, [
    {prod, [
        {erl_opts, [no_debug_info, warnings_as_errors]},
        {relx, [{mode, prod}]}
    ]}
]}.

{shell, [
    {config, "./config/sys.config"},
    {apps, [happyshopr]}
]}.

{plugins, []}.
